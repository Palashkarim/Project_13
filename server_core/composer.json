{
  "name": "iot/platform-api",
  "description": "Self-hosted IoT Platform API (PHP) + firmware codegen",
  "type": "project",
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "ext-zlib": "*"
  },
  "autoload": {
    "psr-4": {
      "Iot\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}